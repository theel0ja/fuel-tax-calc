<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="info.theel0ja.pavero.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/info"
        android:elevation="2dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:layout_marginTop="44dp"
        android:id="@+id/editText"
        android:hint="@string/price"
        android:layout_alignParentStart="true" />

    <Button
        android:text="@string/calculate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:layout_below="@+id/editText"
        android:layout_alignParentStart="true"
        android:onClick="calculateTaxesBensiini" />


    <TextView
        android:id="@+id/printa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/printb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/printa"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/printe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/printd"
        android:layout_alignParentStart="true" />

    <TextView
    android:id="@+id/printf"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
        android:layout_below="@+id/printe"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/printd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/printc"
        android:layout_alignParentStart="true"
        android:layout_marginTop="13dp" />

    <TextView
        android:id="@+id/printc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/printb"
        android:layout_alignParentStart="true" />

</RelativeLayout>
